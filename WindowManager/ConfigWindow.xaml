<Window x:Class="WindowManager.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WindowManager"
        mc:Ignorable="d"
        Title="ConfigWindow" Height="350" Width="525">
  <Grid>
    <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Height="60" Margin="61,68,0,0" TextWrapping="Wrap" Text="Select a message option and then choose the Display button." VerticalAlignment="Top" Width="406" RenderTransformOrigin="0.502,0.484"/>
    <RadioButton x:Name="RadioButton1" Content="Hello" HorizontalAlignment="Left" Height="67" Margin="61,149,0,0" VerticalAlignment="Top" Width="143"/>
    <RadioButton x:Name="RadioButton2" Content="Goodbye" HorizontalAlignment="Left" Height="67" Margin="281,149,0,0" VerticalAlignment="Top" Width="154"/>
    <Button x:Name="button" Content="Display" HorizontalAlignment="Left" Height="33" Margin="190,221,0,0" VerticalAlignment="Top" Width="91" Click="button_Click"/>
  </Grid>
</Window>
